<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:padding="15dp">

    <ImageView
        android:id="@+id/imAccountImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account_def" />

    <TextView
        android:id="@+id/tvAccountEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:padding="3dp"
        android:text="@string/guest"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/imAccountImage"
        app:layout_constraintTop_toBottomOf="@+id/imAccountImage" />
</androidx.constraintlayout.widget.ConstraintLayout>